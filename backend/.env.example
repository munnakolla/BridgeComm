# Azure Configuration for BridgeComm Backend
# Copy this file to .env and fill in your Azure credentials

# =============================================================================
# AZURE SPEECH SERVICES (Required for speech-to-text and text-to-speech)
# =============================================================================
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=centralindia

# =============================================================================
# AZURE LANGUAGE SERVICES (Required for text analysis)
# =============================================================================
AZURE_LANGUAGE_KEY=your_language_key_here
AZURE_LANGUAGE_ENDPOINT=https://your-resource.cognitiveservices.azure.com

# =============================================================================
# AZURE TRANSLATOR (Required for multi-language support)
# =============================================================================
AZURE_TRANSLATOR_KEY=your_translator_key_here
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com
AZURE_TRANSLATOR_REGION=centralindia

# =============================================================================
# AZURE VISION SERVICES (Optional - for advanced image analysis)
# =============================================================================
AZURE_VISION_KEY=your_vision_key_here
AZURE_VISION_ENDPOINT=https://your-vision.cognitiveservices.azure.com

# =============================================================================
# GROQ API (Optional - for fast LLM inference, alternative to Azure OpenAI)
# =============================================================================
GROQ_API_KEY=your_groq_api_key_here

# =============================================================================
# AZURE OPENAI (Optional - for advanced NLP features)
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-01

# =============================================================================
# AZURE BLOB STORAGE (Optional - for media storage)
# =============================================================================
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=youraccountname;AccountKey=yourkey;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=bridgecomm-media

# =============================================================================
# AZURE COSMOS DB (Optional - for user data persistence)
# =============================================================================
AZURE_COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
AZURE_COSMOS_KEY=your_cosmos_key_here
AZURE_COSMOS_DATABASE_NAME=bridgecomm
AZURE_COSMOS_CONTAINER_NAME=users

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_SECRET_KEY=your_app_secret_key_here_generate_random_32_chars
APP_DEBUG=true
APP_CORS_ORIGINS=["http://localhost:8081","http://localhost:19006","exp://localhost:8081"]

# =============================================================================
# LOCAL WHISPER (Optional - for offline speech recognition)
# =============================================================================
USE_LOCAL_WHISPER=false
WHISPER_MODEL_SIZE=base
